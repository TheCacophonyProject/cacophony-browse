{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },

    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules"]
}
